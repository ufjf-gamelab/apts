{
  "author": "Gabriel Malosto",
  "dependencies": {
    "@repo/engine": "workspace:*"
  },
  "description": "Collection of tabletop games to be used with the engine.",
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "typescript": "^5.8.3",
    "vitest": "^3.2.1"
  },
  "exports": {
    "./Snowball/*": {
      "import": "./src/Snowball/*"
    },
    "./TicTacToe/*": {
      "import": "./src/TicTacToe/*"
    }
  },
  "license": "AGPL-3.0-only",
  "name": "@repo/games",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "format": "pnpm exec prettier . -w",
    "lint": "pnpm exec eslint ./src/** --fix",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "typecheck": "pnpm exec tsc"
  },
  "type": "module",
  "version": "0.0.1"
}
