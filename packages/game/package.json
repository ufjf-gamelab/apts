{
  "author": "Gabriel Malosto",
  "dependencies": {
    "@repo/core": "workspace:*"
  },
  "devDependencies": {
    "@repo/eslint_config": "workspace:*",
    "@repo/typescript_config": "workspace:*",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "exports": {
    "./*": {
      "types": "./src/*",
      "default": "./dist/*"
    }
  },
  "license": "AGPL-3.0-only",
  "name": "@repo/game",
  "private": true,
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "check-types": "tsc --noEmit --project tsconfig.build.json",
    "dev": "tsc --watch --project tsconfig.build.json",
    "format": "prettier . -w",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest run",
    "test:watch": "vitest --watch"
  },
  "type": "module",
  "version": "4.3.0"
}
