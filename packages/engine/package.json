{
  "author": "Gabriel Malosto",
  "description": "Engine to simulate and create AI models for tabletop games, inspired by the AlphaZero algorithm.",
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "typescript": "^5.8.3",
    "vitest": "^3.2.1"
  },
  "exports": {
    "./constants.js": {
      "import": "./src/constants.ts"
    },
    "./Game/*": {
      "import": "./src/Game/*"
    },
    "./MonteCarloTreeCommon/*": {
      "import": "./src/MonteCarloTreeCommon/*"
    },
    "./types.js": {
      "import": "./src/types.ts"
    }
  },
  "license": "AGPL-3.0-only",
  "name": "@repo/engine",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "format": "pnpm exec prettier . -w",
    "lint": "pnpm exec eslint ./src/** --fix",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "typecheck": "pnpm exec tsc"
  },
  "type": "module",
  "version": "4.3.0"
}
