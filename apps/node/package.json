{
  "author": "Gabriel Malosto",
  "dependencies": {
    "@paralleldrive/cuid2": "^3.0.4",
    "@repo/engine_core": "workspace:*",
    "@repo/game": "workspace:*",
    "@repo/games": "workspace:*",
    "@repo/interface": "workspace:*",
    "@repo/search": "workspace:*",
    "@ts-graphviz/adapter": "=3.0.4",
    "@ts-graphviz/ast": "=3.0.4",
    "@ts-graphviz/common": "=3.0.4",
    "@ts-graphviz/core": "=3.0.4",
