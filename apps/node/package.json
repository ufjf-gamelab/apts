{
  "author": "Gabriel Malosto",
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@repo/engine": "workspace:*",
    "@repo/interface": "workspace:*",
    "@tensorflow/tfjs": "^4.22.0",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "prompts": "^2.4.2",
    "ts-graphviz": "^2.1.6"
  },
  "description": "Engine to simulate and create AI models for tabletop games, inspired by the AlphaZero algorithm.",
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.13.9",
    "@types/prompts": "^2.4.9",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src"
  ],
  "license": "AGPL-3.0-only",
  "main": "src/index.ts",
  "name": "node",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --packages=external --platform=node --format=esm --outdir=dist --sourcemap",
    "dev": "tsx watch src/index.ts",
    "format": "pnpm exec prettier . -w",
    "lint": "pnpm exec eslint ./src/** --fix",
    "preview": "pnpm run build && node ./dist/index.js",
    "typecheck": "pnpm exec tsc"
  },
  "type": "module",
  "version": "4.2.0"
}
